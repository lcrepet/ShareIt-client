<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>

            <item>
                <shape>
                    <gradient
                        android:endColor="#ccf2ff"
                        android:startColor="#97c1ff"
                        android:angle="270" />
                    <corners
                        android:radius="5dp" />
                    <padding
                        android:left="10dp"
                        android:top="5dp"
                        android:right="10dp"
                        android:bottom="5dp" />

                </shape>
            </item>
            <item
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp">
                <bitmap android:src="@drawable/dropdown"
                    android:gravity="top|right" />
            </item>
        </layer-list>
    </item>

</selector>