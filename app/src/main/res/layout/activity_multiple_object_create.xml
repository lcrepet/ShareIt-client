<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.lyon.insa.ot.sims.shareit_client.MultipleObjectCreateActivity"
    style="@style/background_style">

    <RelativeLayout
        android:id="@+id/ButtonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        style="@style/menu_share">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter les objets"
            android:id="@+id/addObjects"
            style="@style/button_text"
            android:layout_centerInParent="true"
            android:background="@drawable/share_button"
            android:drawableLeft="@drawable/ic_action_done" />

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/objectList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/ButtonAdd" />

</RelativeLayout>
